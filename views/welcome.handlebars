<div class="container-fluid p-0">
   <header class="pulse animated masthead container-fluid pt-5" style="background-image: url('/header-bg.jpg'); height:100vh; background-size:contain">
    <div class="container pt-5 mt-5">
        <h1 class="text-light pt-5"><i>Hello</i> {{Name}}</h1>
        <div class="intro-text mb-5 text-light" style="padding-top: 50px;"><span class="bounce animated text-light"
                style="font-size: 25PX;letter-spacing: 2px; margin-bottom: 50px;">Welcome To
                <strong class="mb-5 text-light">GREENFONTS' MEDIA RESOURCES</strong></span>
            <div class="intro-lead-in"></div>
            <div class="intro-heading text-uppercase mb-5 text-light mt-4"><span >It's Nice To Meet
                    You</span></div><button class="btn btn-primary btn-xl text-uppercase js-scroll-trigger text-light" role="button" data-toggle="modal" data-target="#editProfileModal"
                data-bs-hover-animate="shake">Edit Profile</button>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger text-light" role="button"
                    data-bs-hover-animate="shake" href="/user/userProfile">My Profile</a>
        </div>
    </div>
</header>

<div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit your Profile</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/user/EditProfile" method="POST"
                    enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <label for="name">UserName</label>
                        <input type="name" id="name" name="Name" class="form-control" value="{{user.name}}"
                            placeholder="Enter your UserName" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" value="{{user.email}}"
                            placeholder="Enter Email" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Occupation</label>
                        <input type='text' id="Ocupation" name="Occupation" class="form-control" value="{{Occupation}}"
                            placeholder="Occupation" required />
                    </div>
                    <div class="form-group">
                        <label for="Skills">Skills</label>
                        <input type="text" name="Skills" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Hobbies">Hobbies</label>
                        <input type="text" id="Hobbies" name="Hobbies" class="form-control"
                            placeholder="What you like doing (Hobbies)" required />
                    </div>
                    <div class="form-group">
                        <label for="AboutMe">Description</label>
                        <textarea name="About" class="form-control"
                            placeholder="Descirbe yourself in not less than 200 words" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
            </div>


        </div>
    </div>
</div>