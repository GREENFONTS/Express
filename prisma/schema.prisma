generator client {
  provider = "prisma-client-js"
}

datasource mysql {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model posts {
  Content    String?
  Created_at DateTime? @default(now())
  Email      String?
  id         String    @id @default(cuid())
  Title      String?
  users      users?    @relation(fields: [Email], references: [Email])

  @@index([Email], name: "Email")
}

model todo {
  Content String?
  Email   String?
  id      String  @id @default(cuid())
  Task    String?
  users   users?  @relation(fields: [Email], references: [Email])

  @@index([Email], name: "Email")
}

model users {
  Email     String  @id
  Name      String?
  Password  String?
  Password2 String?
  posts     posts[]
  todo      todo[]
}